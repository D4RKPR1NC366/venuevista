# Server Environment Variables Template
# Copy this file to .env.production and fill in the values

# MongoDB Atlas Connection (without database name)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/

# JWT Secret Key (use a strong random string)
JWT_SECRET=your-jwt-secret-key-here

# Email Configuration for sending notifications
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-app-password

# Server Port (automatically set by Render, keep default for local)
PORT=5051

# Client URL (frontend URL for CORS)
CLIENT_URL=https://your-client-url.onrender.com

# Node Environment
NODE_ENV=production
