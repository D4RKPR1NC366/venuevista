{
  "name": "goldust-creation-capstone",
  "version": "1.0.0",
  "description": "Goldust Creation Management System",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "postinstall": "echo 'Dependencies installed successfully'",
    "dev": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:server": "cd server && npm start",
    "start:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "prepare-hostinger": "npm run build && powershell -c \"Copy-Item -Path 'client\\dist\\*' -Destination 'public_html\\' -Recurse -Force\"",
    "verify": "cd server && node verify-atlas.js",
    "deploy:prepare": "npm run verify && npm run prepare-hostinger"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.21.2",
    "mongoose": "^7.6.1",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "bcryptjs": "^3.0.3",
    "mongodb": "^6.20.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "@mui/x-date-pickers": "^8.9.2",
    "axios": "^1.11.0",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "ph-locations": "^1.1.3",
    "react-big-calendar": "^1.19.4",
    "react-datepicker": "^8.7.0",
    "react-router-dom": "^7.6.3",
    "react-toastify": "^11.0.5",
    "recharts": "^3.2.1",
    "rsuite": "^5.83.2"
  },
  "devDependencies": {
    "vite": "^7.1.2"
  }
}
